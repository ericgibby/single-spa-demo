{
	"name": "shared-components",
	"author": "Eric Gibby",
	"module": "dist/shared-components.esm.js",
	"version": "0.1.0",
	"license": "MIT",
	"private": true,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"start:ts": "sleepms 1000 && tsdx --format esm,umd watch",
		"start:server": "live-server --no-browser --port=8502 --cors ./dist",
		"start": "concurrently yarn:start:ts yarn:start:server",
		"build": "tsdx build --format esm,umd",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"peerDependencies": {
		"react": ">=16",
		"single-spa": "^5.6.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"size-limit": [
		{
			"path": "dist/shared-components.esm.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/shared-components.umd.production.min.js",
			"limit": "10 KB"
		}
	],
	"devDependencies": {
		"@size-limit/preset-small-lib": "^4.6.0",
		"@types/react": "^16.9.49",
		"@types/react-dom": "^16.9.8",
		"concurrently": "^5.3.0",
		"husky": "^4.3.0",
		"live-server": "^1.2.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"single-spa": "^5.6.0",
		"size-limit": "^4.6.0",
		"sleep-ms": "^2.0.1",
		"tsdx": "^0.14.0",
		"tslib": "^2.0.1",
		"typescript": "^4.0.3"
	}
}
